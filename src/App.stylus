html,
body,
#app 
  margin 0
  padding 0
  height 100vh
  width 100vw
  ::-webkit-scrollbar 
    width 8px
    height 8px
  
  ::-webkit-scrollbar-track 
    background rgb(255, 255, 255)
    border-radius 4px
  
  ::-webkit-scrollbar-thumb 
    background #8695a1
    border-radius 4px
  
  ::-webkit-scrollbar-thumb:hover 
    background #727e88
    
.common-layout 
  width 100%
  height 100%